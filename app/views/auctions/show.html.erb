
<div>
  <h2><%= @auction.title %></h2>
  <p><strong>Description: </strong><%= @auction.description %></p>
  <p><strong>Listed By: </strong><%= @auction.user&.full_name %></p>
  <p><strong>Reserve price: </strong><%= number_to_currency(@auction.reserve) %></p>
</div>

<div>
  <% if user_signed_in? && (@auction.user != current_user) %>
  <br>
    <div class="bid-form">
      <%= simple_form_for [@auction, @bid], remote: true do |f| %>
        <%= f.input :bid %>
        <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  <% end %>

  <h3><strong>Previous Bids</strong></h3>
  <hr>

  <% @bids.each do |bid| %>
    <p><%= bid.created_at %></p>
    <p><strong>Bid: </strong><%= number_to_currency(bid.bid) %></p>
    <p><strong>Bidder: </strong><%= bid.auction.user&.full_name %>
    <p><%= link_to 'Delete',
      [@auction, bid],
      method: :delete,
      remote: :true,
      data: {confirm: 'Are you sure?!!'}
    %></p>
    <hr>
  <% end %>
</div>
